<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<Scene xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ControllerConfig">
    <AnchorPane prefHeight="200" prefWidth="278.0">
      <children>
         <CheckBox fx:id="startWhenLive" layoutX="33.0" layoutY="24.0" mnemonicParsing="false" selected="true" text="Start when channel went live" />
         <CheckBox fx:id="stopWhenOffline" layoutX="33.0" layoutY="53.0" mnemonicParsing="false" selected="true" text="Stop when channel went offline" />
         <TextField fx:id="repeatEveryMinutes" layoutX="33.0" layoutY="108.0" prefHeight="24.0" prefWidth="52.0" text="3" />
         <Text fontSmoothingType="LCD" layoutX="89.0" layoutY="124.0" smooth="false" strokeType="OUTSIDE" strokeWidth="0.0" text="Repeat every (minutes)" />
         <TextField fx:id="stopAfterHs" layoutX="33.0" layoutY="80.0" prefHeight="24.0" prefWidth="52.0" text="3" />
         <Text fontSmoothingType="LCD" layoutX="89.0" layoutY="96.0" smooth="false" strokeType="OUTSIDE" strokeWidth="0.0" text="Stop after (hs)" />
         <Button fx:id="saveConfig" layoutX="93.0" layoutY="148.0" mnemonicParsing="false" onMouseClicked="#saveAllOptions" prefHeight="38.0" prefWidth="86.0" text="Save" />
      </children></AnchorPane>
</Scene>
